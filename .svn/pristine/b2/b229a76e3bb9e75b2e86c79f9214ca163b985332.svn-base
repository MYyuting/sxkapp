<script>
		import Head from '@/components/public/headNav'
		import { Toast,Popup } from 'mint-ui'
    export default {
        name: "xgpaihang",
				data(){
        		return {
        				gzi:1,
        				tabarr:['本周','上周','总榜'],
								token:'',
								arrList:[],
								indexN:0,
								flagWu:true,
								name:this.$route.query.name,
								img:this.$route.query.img,
								num:this.$route.query.num,
						}
				},
				mounted(){
        		this.token = localStorage.getItem('userName');
        		this.getData();
				},
				methods:{
						back(){
								this.$router.go(-1);
						},
						//点击切换
						tabClick(index){
								this.indexN = index;
								this.getData();
						},
						//本页数据列表
						getData(){
								this.$axios.post(url+'/api/userStarlightDetails/findUserStarlightDetails',this.$qs.stringify({
										token:this.token,
										operatingType:this.indexN,
										tInvestorsId:this.$route.query.id,
								})).then((res) => {
										console.log(res.data);
										switch (res.data.status) {
												case '106':
														Toast({
																message: res.data.message,
														});
														this.flagWu = true;
														break;
												case '0':
														this.arrList = res.data.userStarlightDetailsList;
														console.log(this.arrList);
														this.flagWu = false;
														break;
												default:
														Toast({
																message: res.data.message,
														});
														this.flagWu = true;
										}

								})
						},
						// 点击关注
						clickBtn(index){
								let userId = this.arrList[index].userTeam.userId;
								console.log(this.arrList[index].userTeam.attentionStatus);
								if(this.arrList[index].userTeam.attentionStatus == 1){
										this.$axios.post(url+'/api/userAttention/addUserAttention',this.$qs.stringify({
												token:this.token,
												attentionUserId:userId,  //被关注人的userId
												attentionStatus:0,      //0取消   1 关注
										})).then((res) => {
												console.log(res.data);
												if(res.data.status == 0){
														this.arrList[index].userTeam.attentionStatus = 0;
														Toast({
																message: '关注成功',
																position: 'bottom',
																duration: 1000
														});
												}else {
														Toast({
																message: res.data.message,
																position: 'bottom',
																duration: 1000
														});
												}
										}).catch((err) => {
												console.log(err);
										})
								}else{
										this.$axios.post(url+'/api/userAttention/addUserAttention',this.$qs.stringify({
												token:this.token,
												attentionUserId:userId,  //被关注人的userId
												attentionStatus:1,      //0取消   1 关注
										})).then((res) => {
												console.log(res.data);
												if(res.data.status == 0){
														this.arrList[index].userTeam.attentionStatus = 1;
														Toast({
																message: '取消关注',
																position: 'bottom',
																duration: 2000
														});
												}else{
														Toast({
																message: res.data.message,
																position: 'bottom',
																duration: 2000
														});
												}
										}).catch((err) => {
												console.log(err)
										})
								}
						},
				},
				components:{
        		Head
				}
    }
</script>


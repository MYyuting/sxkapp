<script>
	import { MessageBox } from 'mint-ui';
	import { Toast } from 'mint-ui';
    export default {
        name: "issuser",
				props:['datalist'],
				data(){
					return{
						flag:false,
						arrLike:[],
						arrLike1:[],
						xiabiao:""
					}
				},
				mounted(){
					setTimeout(()=>{
							for(var item of this.datalist){
							this.arrLike.push(false)
							this.arrLike1.push(true)
						}
					},800)
				},
				methods:{
					//删除
					wdel(index){
						MessageBox.confirm('确定删除这条动态吗?',"").then(action => {
							var token=sessionStorage.getItem("userName");
			      		this.$axios({
									  headers:{'Content-Type':'application/x-www-form-urlencoded'},
								      method: "POST",
								      url: "/api/sxz/api/delRecord",
								      data: this.$qs.stringify({
													token:token,
													id:this.datalist[index].id
								      })
								    })
								     .then(res=> {
								     		if(res.data.status==0){
													this.datalist.splice(index,1)
								     		}else{
                  			//否则提示
								     			var msga=res.data.message;
													Toast({
									          message:msga,
									        });
								     		}
								     })
								     .catch(err=>{
								       console.log(err);
								     });
						}, action => {
							console.log("取消")
						})
					},
					//点赞
					giveLikeTap(index){
						//根据后台给的是否点赞判断
						 	var isFlag=this.datalist[index].isFlag
						 	var pList=this.datalist[index].pList
							var token=sessionStorage.getItem("userName");
							//isFlag=='false' 未点赞 发送isLove=1 要点赞
						 	if(isFlag=='false'){
							 	//数据
		      		   this.$axios({
								  headers:{'Content-Type':'application/x-www-form-urlencoded'},
							      method: "POST",
							      url: "api/sxz/api/savePraise",
							      data: this.$qs.stringify({
												token:token,
												rid:this.datalist[index].id,
												isLove:1
							      })
							    })
						     .then(res=> {
										if(res.data.status==0){
											console.log("点赞111")
											this.datalist[index].isFlag='true'
											this.datalist[index].pList.length=this.datalist[index].pList.length+1
											console.log(this.datalist)
										}else{
											var msga=res.data.message
											Toast({
							          message:msga,
							        });
										}
						     })
						     .catch(err=>{
						       console.log(err);
						     });
							//isFlag=='true' 点赞 发送isLove=0 取消点赞
						 	}else if(isFlag=='true'){
						 		//数据
		      		   	this.$axios({
								  headers:{'Content-Type':'application/x-www-form-urlencoded'},
							      method: "POST",
							      url: "api/sxz/api/savePraise",
							      data: this.$qs.stringify({
												token:token,
												rid:this.datalist[index].id,
												isLove:0
							      })
							    })
							     .then(res=> {
											if(res.data.status==0){
												console.log("取消点赞22")
												this.datalist[index].isFlag='false'
												this.datalist[index].pList.length=this.datalist[index].pList.length-1
											console.log(this.datalist)
												
											}else{
												var msga=res.data.message
												Toast({
								          message:msga,
								        });
											}
							     })
					     .catch(err=>{
					       console.log(err);
					     });
					     
						 	}
					},
					//送星


				}
    }
</script>


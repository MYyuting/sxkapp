						clickLIST(index){
								console.log(this.arrList[index]);
								this.input2 = this.arrList[index].price;
								this.input1 = this.arrList[index].investorsName;
								this.flag = false;
								this.investorsCode = this.arrList[index].investorsCode;
								this.getJson();
								this.queryJson()
						},
				    //		买入
						mairuClick(){
								if(this.input1 !='' ){
										if(this.input2 != ''){
												if(this.input2 < 0.01){
														Toast({
																message: '不能低于0.01',
																position: 'middle',
																duration: 2000
														});
												}
												if(this.input3 != ''){
														this.popupVisible = true
												}else{
														Toast({
																message: '数量不能为空',
																position: 'middle',
																duration: 2000
														});
												}
										}else {

				data() {
						return {
								tabShow:false,
								flag:false,
								input1: '',
								input2: '',
								input3: '',
								activeName: 'first',
								token:'',
								arrList:[],
								investorsCode:'',
								items: [0, 1, 2, 3, 4, 5],
								keys: keys(),
								password: [],
								popupVisible:false,
								buyAndSellerList:[],   //买卖明细
								buyFiverList:[
										{
												price:'-',
												num:'-'
										},
										{
												price:'-',
												num:'-'
										},
										{
												price:'-',
												num:'-'
										},
										{
												price:'-',
												num:'-'
										},
										{
												price:'-',
												num:'-'
										},
								],     //买五集合
								sellFiverList:[
										{
												price:'-',
												num:'-'
										},
										{
												price:'-',
												num:'-'
										},
										{
												price:'-',
												num:'-'
										},
										{
												price:'-',
												num:'-'
										},
										{
												price:'-',
												num:'-'
										},
								],    //卖五集合
								queryNum:'-',            //查询可买数量
								mescroll:null,
						}
				},
				mounted(){
						this.token = localStorage.getItem('userName');
						var self = this;
						self.mescroll = new MeScroll("mescroll", { //请至少在vue的mounted生命周期初始化mescroll,以确保您配置的id能够被找到
								down: {
										callback: this.downCallback //下拉刷新的回调,别写成downCallback(),多了括号就自动执行方法了
								},
						});
				},
				watch:{
						//监听价格变化
						'input2': function(newVal,oldVal){
								// console.log(newVal,oldVal)
								this.queryJson()
						}
				},
				methods: {
						tabBtn(i){
								if(i>0){
										this.tabShow = true;
								}else{
										this.tabShow = false;
								}
						},
						//下拉刷新
						downCallback(){
								console.log(1);
								this.getJson()
						},
						handleClick(tab, event) {
								// console.log(tab, event);
						},
						ievent(data){
								console.log(data);
								this.input1=data.investorsCode;
								this.input2=data.newOrderPrice;
								this.queryJson()
						},
						//搜索框
						change(){
								if(this.input1){
										this.flag = true;
								}else{
										this.flag = false;
								}
								this.$axios.post(url+'/miao/productSearch.do',this.$qs.stringify({
										param:this.input1,
										token:this.token
								})).then((res) => {
										console.log(res.data);
										this.arrList = res.data.LIST
								}).catch((err)=>{
										alert('网络错误')
								})

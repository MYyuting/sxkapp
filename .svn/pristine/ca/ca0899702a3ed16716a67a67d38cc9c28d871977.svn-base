										<ul>
												<li @click="keyUpHandle($event)" v-for="val in keys">{{ val }}</li>
												<li class="del" @click="delHandle"><span class="icon-del"><i class="el-icon-close"></i></span></li>
										</ul>
								</div>
						</div>
				</mt-popup>
		</div>
</template>

<script>
		const keys = () => [1, 2, 3, 4, 5, 6, 7, 8, 9, '', 0];
		import tabListToBuy from './tabListToBuy'
		import { Toast,Popup } from 'mint-ui'
		export default {
				name: "dynamic_temp",
				data() {
						return {
								flag:false,
								input1: '',
								input2: '',
								input3: '',
								activeName: 'first',
								token:'',
								arrList:'',
								investorsCode:'',
								items: [0, 1, 2, 3, 4, 5],
								keys: keys(),
								password: [],
								popupVisible:false,
						}
				},
				mounted(){
						this.token = sessionStorage.getItem('userName');
				},
				methods: {
						handleClick(tab, event) {
								console.log(tab, event);
						},
						//搜索框
						change(){
								if(this.input1){
										this.flag = true;
								}else{
										this.flag = false;
								}
								this.$axios.post('/api/miao/productSearch.do',this.$qs.stringify({
										param:this.input1,
										token:this.token
								})).then((res) => {
										console.log(res.data);
										this.arrList = res.data.LIST
								}).catch((err)=>{
										alert('网络错误')
								})
						},
						clickLIST(index){
								console.log(this.arrList[index]);
								this.input2 = this.arrList[index].price;
								this.input1 = this.arrList[index].investorsName;
								this.flag = false;
								this.investorsCode = this.arrList[index].investorsCode;
								this.getJson()
						},
				    //		买入
						mairuClick(){
								if(this.input1 !='' ){
										if(this.input2 != ''){
												if(this.input3 != ''){
														this.popupVisible = true
												}else{
														Toast({
																message: '数量不能为空',
																position: 'middle',
																duration: 2000
														});
												}
										}else {
												Toast({
														message: '价格不能为空',
														position: 'middle',
														duration: 2000
												});
										}
								}else {
										Toast({
												message: '发行人不能为空',
												position: 'middle',
												duration: 2000
										});
								}
						},
						backHandle () {
								this.clearPasswordHandle();  // 返回时清除password
								// this.$emit('backFnc') // 返回上级
								this.popupVisible = false
						},
						keyUpHandle (e) {
								console.log(e.currentTarget.innerText);
								let text = e.currentTarget.innerText;
								let len = this.password.length;
								if (!text || len >= 6) return;
								this.password.push(text);
								this.ajaxData();
						},
						//删除密码
						delHandle () {
								if (this.password.length <= 0) return false;
								this.password.pop();
						},
						//请求接口买入
						ajaxData () {
								if (this.password.length >= 6) {
										//必须注释
										let waps = parseInt(this.password.join(' ').replace(/\s/g, ''));
										console.log(waps);
										this.$axios.post('/api/miao/orderReservations.do',
												this.$qs.stringify({
														token:this.token,
														investorsCode:this.investorsCode,   //发行人代码
														buyerOrderPrice:this.input2,   //价钱
														buyerOrderNum: this.input3,     // 数量
														userPayWord: this.$md5('waps'),      // 密码
												}),{
														headers:{'Content-Type':'application/x-www-form-urlencoded'}
												}).then((res) => {
														//输入密码隐藏
														this.popupVisible = false;
														Toast({
																message: res.data.MSG,
																position: 'middle',
																duration: 3000
														});
														console.log(res)
										}).catch((err) => {
												console.log(err)
										});
								}
						},
						clearPasswordHandle: function () {
								this.password = []
						},
						// 右边买卖5
						getJson(){
								this.$axios.post('/api/miao/queryProductByCode.do',this.$qs.stringify({
										token:this.token,
										investorsCode:this.investorsCode
								}),{
										headers:{'Content-Type':'application/x-www-form-urlencoded'}
								}).then((res) => {
										console.log(res.data.OBJECT)
								}).catch((err) => {
										console.log(err)
								})
						}

				},

				components:{
						tabListToBuy,
						Popup:Popup.name
				}
		}
</script>

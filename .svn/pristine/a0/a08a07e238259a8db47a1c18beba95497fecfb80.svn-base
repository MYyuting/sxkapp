				},
				mounted(){
						this.token = sessionStorage.getItem('userName')
				},
				methods: {
						handleClick(tab, event) {
								console.log(tab, event);
						},
						backHandle () {
								this.clearPasswordHandle();  // 返回时清除password
								// this.$emit('backFnc') // 返回上级
								this.popupVisible = false
						},
						keyUpHandle (e) {
								console.log(e.currentTarget.innerText);
								let text = e.currentTarget.innerText;
								let len = this.password.length;
								if (!text || len >= 6) return;
								this.password.push(text);
								this.getSell();
						},
						//搜索框
						change(){
								if(this.input1){
										this.flag = true;
								}else{
										this.flag = false;
								}
								this.$axios.post('/api/miao/productSearch.do',this.$qs.stringify({
										param:this.input1,
										token:this.token
								})).then((res) => {
										console.log(res.data);
										this.arrList = res.data.LIST
								}).catch((err)=>{
										alert('网络错误')
								})
						},
						//删除密码
						delHandle () {
								if (this.password.length <= 0) return false;
								this.password.pop();
						},
						clearPasswordHandle: function () {
								this.password = []
						},
						clickLIST(index){
								console.log(this.arrList[index]);
								this.input2 = this.arrList[index].price;
								this.input1 = this.arrList[index].investorsName;
								this.flag = false;
								this.investorsCode = this.arrList[index].investorsCode;
								this.getJson();
								this.queryJson()
						},
						// 卖出btn
						sellClick(){
								if(this.input1 !='' ){
										if(this.input2 != ''){
												if(this.input2 < 0.01){
														Toast({
																message: '不能低于0.01',
																position: 'middle',
																duration: 2000
														});
												}
												if(this.input3 != ''){
														this.popupVisible = true
												}else{
														Toast({
																message: '数量不能为空',
																position: 'middle',
																duration: 2000
														});
												}
										}else {
												Toast({
														message: '价格不能为空',
														position: 'middle',
														duration: 2000
												});
										}
								}else {
										Toast({
												message: '发行人不能为空',
												position: 'middle',
												duration: 2000
										});
								}
						},
						// 卖出接口
						getSell(){
								if (this.password.length >= 6) {
										let waps = this.password.join('').replace(/\s/g, '');
										console.log(typeof waps);
										this.$axios.post('/api/miao/sellOrder.do',this.$qs.stringify({
												token:this.token,
												investorsCode:this.investorsCode,
												sellOrderPrice:this.input2,
												sellOrderNum:this.input3,
												userPayWord: this.$md5(waps), //支付密码（md5加密）
										}),{
												headers:{'Content-Type':'application/x-www-form-urlencoded'}
										}).then((res) => {
												console.log(res);
												this.popupVisible = false;
												if(res.data.STATUS == '1'){
														Toast({
																message:res.data.MSG ,
																position: 'middle',
																duration: 2000
														});
												}else{
														Toast({
																message:res.data.MSG ,
																position: 'middle',
																duration: 2000
														});
												}
										}).catch((err) => {
												console.log(err)
										})
								}
						},
						// 右边买卖5
						getJson(){
								// var ss = setInterval( () => {
										this.$axios.post('/api/miao/queryProductByCode.do',this.$qs.stringify({
												token:this.token,
												investorsCode:this.investorsCode
										}),{
												headers:{'Content-Type':'application/x-www-form-urlencoded'}
										}).then((res) => {
											console.log("卖出5")
												console.log(res.data.OBJECT);
												// 买
												this.buyAndSellerList = res.data.OBJECT.buyAndSellerList;
												this.buyFiverList = res.data.OBJECT.buyFiverList;
												this.sellFiverList = res.data.OBJECT.sellFiverList
										}).catch((err) => {
												console.log(err);
										})
								// },1000);
						},
						// 查询可买数量
						queryJson(){
								this.$axios.post('/api/miao/newQueryCanBuyTime.do',this.$qs.stringify({
										token:this.token,
										price:this.input2
								}),{
										headers:{'Content-Type':'application/x-www-form-urlencoded'}
								}).then((res) => {
										console.log(res.data.OBJECT.num);
										this.queryNum  = res.data.OBJECT.num;
								})
						}
				},
				components:{
						tabListToBuy,
						Popup:Popup.name
				}
		}
</script>

		const keys = () => [1, 2, 3, 4, 5, 6, 7, 8, 9, '', 0];
		import tabListToBuy from './tabListToBuy'
		import { Toast,Popup } from 'mint-ui'
		export default {
				name: "sell_temp",
				data() {
						return {
								flag:false,
								input1: '',
								input2: '',
								input3: '',
								token:'',
								items: [0, 1, 2, 3, 4, 5],
								keys: keys(),
								password: [],
								activeName: 'first',
								popupVisible:false,
								sellNum:'-',
								investorsCode:'700003',    //发行人代码
								arrList:'',
								
								   //买五集合
								sellFiverList:[
										{
												price:'-',
												num:'-'
										},
										{
												price:'-',
												num:'-'
										},
										{

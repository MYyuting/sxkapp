<script>
		import { MessageBox } from 'mint-ui';
		import { Toast } from 'mint-ui';
		export default {
				name: "issuser",
				props:['datalist','whide'],
				data(){
						return{
								flag:false,
								token:'',
								arrLike:[],
								arrLike1:[],
								xiabiao:"",
								alertS:false,
								index:'',
								tInvestorsId:'',
								xingNum:'',
								user_num:0,
								id:'',
								issuerName:'',
								product:'',
								imgShow:false,
								imgUrlShow:'',
						}
				},
				watch:{
					  datalist:function(){
								this.product = this.datalist;
								console.log(this.product);
						}
				},
				mounted(){
						this.token = localStorage.getItem('userName');
						setTimeout(()=>{
								for(var item of this.datalist){
										this.arrLike.push(false);
										this.arrLike1.push(true)
								}
						},800)
				},
				methods:{
						//点击跳转详情页面
						details(id){
								this.$router.push({
										path:'/wdynamic',
										query: {wid:id, }
								})
						},
						//点击图片查看
						imgView(url){
								this.imgShow = true;
								this.imgUrlShow = url;
						},
							//		模态图片框
						motai(){
								this.imgShow = false;
						},
						//送星光弹出
						songBtn(index){
								this.index = index;
								this.tInvestorsId = this.product[index].tInvestorsId;
								this.issuerName = this.product[index].userName;
								this.alertS = true;

								this.id = this.product[index].id;
								this.$axios.post(url+'/api/user/getUserInfo',this.$qs.stringify({
										token:this.token
								})).then((res) => {
									console.log(res.data);
									this.user_num = res.data.data.starlight_num; //可用星光
								})
						},
						//取消投票
						quxiao(){
								this.alertS = false;
								this.xingNum = '';
						},
						//确认投票
			      queren(){
								this.$axios.post(url+'/api/user/updateStarlightNum',this.$qs.stringify({
									token:this.token,
									starlightNum:this.xingNum,// 星光数
									tInvestorsId:this.tInvestorsId,//发行人id
									recordId:this.id,
									voteNewId:'',  //只有0传
									operatingType:'2',//0:投票赠送、1申购赠送、2发行人动态赠送、
								})).then((res) => {
										console.log(res.data);
										switch (res.data.status)
										{
												case '0':
														this.product[this.index].starlightNum += parseInt(this.xingNum);
														Toast({
																message: '赠送成功',
																duration: 1000
														});
														break;
												default:
														Toast({
																message: res.data.message,
																duration: 1000
														});
										}
										this.alertS = false;
										this.xingNum = '';
								}).catch((err) => {
										console.log(err);
								})
			      },
						//删除
						wdel(index){
								MessageBox.confirm('确定删除这条动态吗?',"").then(action => {
										var token=localStorage.getItem("userName");
										this.$axios({
												headers:{'Content-Type':'application/x-www-form-urlencoded'},
												method: "POST",
												url: url+"/sxz/api/delRecord",
												data: this.$qs.stringify({
														token:token,
														id:this.datalist[index].id
												})
										})
												.then(res=> {
														if(res.data.status==0){
																this.datalist.splice(index,1)
														}else{
																//否则提示
																var msga=res.data.message;
																Toast({
																		message:msga,
																});
														}
												})
												.catch(err=>{
														console.log(err);
												});
								}, action => {
										console.log("取消")
								})
						},
						//点赞
						giveLikeTap(index){
								//根据后台给的是否点赞判断
								var isFlag=this.datalist[index].isFlag
								var pList=this.datalist[index].pList
								var token=localStorage.getItem("userName");
								//isFlag=='false' 未点赞 发送isLove=1 要点赞
								if(isFlag=='false'){
										//数据
										this.$axios({
												headers:{'Content-Type':'application/x-www-form-urlencoded'},
												method: "POST",
												url: url+"/sxz/api/savePraise",
												data: this.$qs.stringify({
														token:token,
														rid:this.datalist[index].id,
														isLove:1
												})
										}).then(res=> {
												if(res.data.status==0){
														console.log("点赞111")
														this.datalist[index].isFlag='true';
														this.datalist[index].pListNum = this.datalist[index].pListNum+1;
														console.log(this.datalist)
												}else{
														var msga=res.data.message
														Toast({
																message:msga,
														});
												}
										}).catch(err=>{
												console.log(err);
										});
										//isFlag=='true' 点赞 发送isLove=0 取消点赞
								}else if(isFlag=='true'){
										//数据
										this.$axios({
												headers:{'Content-Type':'application/x-www-form-urlencoded'},
												method: "POST",
												url: url+"/sxz/api/savePraise",
												data: this.$qs.stringify({
														token:token,
														rid:this.datalist[index].id,
														isLove:0
												})
										}).then(res=> {
												console.log(res)
												if(res.data.status==0){
														console.log("取消点赞22")
														this.datalist[index].isFlag='false'
														this.datalist[index].pListNum=this.datalist[index].pListNum - 1
														console.log(this.datalist)
												
												}else{
														var msga=res.data.message;
														Toast({
																message:msga,
														});
												}
										}).catch(err=>{
												console.log(err);
										});
								}
						},
						//送星


						//		点击进人主页
						Homepage(id,ater,name,isNum,code){
								if(isNum == 3){
										this.$router.push({
												path:'/faxing',
												query: {
														code:code,
												}
										})
								}else{
										this.$router.push({
												path:'/geren',
												query: {
														id:id,
														userImg:ater,
														name:name,
												}
										})
								}

						}
				}
		}
</script>


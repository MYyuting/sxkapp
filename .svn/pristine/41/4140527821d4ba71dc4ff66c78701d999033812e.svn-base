<template>
    <!--实名认证-->
		<div class="authentic">
				<el-head :text="text"></el-head>
				<div class="content">
						<div class="text">
								为方便您能在星时空平台交易，保障您的财产安全，请完善您的认证信息，确保信息的真实性和一致性
						</div>
						<ul>
								<li>
										<div>真实姓名</div>
										<input type="text" placeholder="请输入您的真实姓名" v-model="name">
								</li>
								<li style="border-bottom: 4px solid #eee;">
										<div>身份证号</div>
										<input type="text" placeholder="请输入您的身份证号" v-model="zjhao">
								</li>
								<li>
										<div>验证码</div>
										<div>
										<input type="number" v-model="yzm">
										<button @click="getCode" :disabled="disabled" :class="disabled ? 'btnan':''">{{yzmtxt}}</button>
										</div>
								</li>
						</ul>
						<div class="btn">
								<button :plain="true" @click="open">下一步</button>
								<div class="check">
										<input type="checkbox" v-model="checked">
										<span>已阅读并同意<span>《充值协议》</span></span>
								</div>
						</div>
				</div>
		</div>
</template>

<script>
		import Head from '@/components/mine/headMe'
		import { Toast } from 'mint-ui';
    export default {
        name: "authentication",
				data(){
        		return{
        				text:["认证个人信息"],
								tishi:"验证码错误",
								token:'',
								name:'',
								checked:true,
								zjhao:'',
								yzm:'',
								userTel:'',
								disabled:false,
								time:0,
								yzmtxt:'获取验证码',
						}
				},
				mounted(){
        		this.token = localStorage.getItem('userName');
						this.userTel = localStorage.getItem('phone');
				},
				methods:{
						open() {
								this.$axios.post(url+'/api/userIdentify/saveTUserIdentify',this.$qs.stringify({
										token:this.token,
										identifyName:this.name,        //名字
										identifyCardNumber:this.zjhao,  //证件号码、
										validateCode:this.yzm,            //：验证码
								})).then((res) => {
										console.log(res);
										if(res.data.status == 0){
												Toast({
														message:res.data.message,
												});
												setTimeout(() => {
														this.$router.push("/setting");
												},2000)
										}else{
												Toast({
														message:res.data.message,
												});
										}
								})
						},
						//获取验证码按钮
						getCode(){

								this.$axios({
										method:'get',
										url:url+'/api/user/getCode',
										params:{
												clientPhone:this.userTel
										}
								}).then((res) => {
										console.log(res.data);
										if(res.data.status == 0){
												this.send();
										}
								})
						},
						//获取验证码
						send(){
								let _this=this;
								_this.disabled=true;
								_this.time=60;
								let it=setInterval(()=> {
										_this.time--;
										if(_this.time==0){
												//  时间走完
												_this.yzmtxt='获取验证码';
												_this.disabled=false;
												clearInterval(it)//用了定时器一定要清楚
										}else {
												_this.yzmtxt=`${_this.time}S重新发送`;
												// this.btn='59s'
												_this.disabled=true
										}
								},1000)
						},
				},
				components:{
        		"el-head":Head
				}
    }
</script>

